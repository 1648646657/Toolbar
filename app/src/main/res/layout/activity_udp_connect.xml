<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context=".udp.UdpConnectActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/udp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UDP"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/udp_toolbar"
        android:orientation="vertical">
        <EditText
            android:id="@+id/udp_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/udp_send_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="发送方"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/udp_receive_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="接收方"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/udp_send_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/layout"/>
    <TextView
        android:id="@+id/udp_receive_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/udp_send_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>